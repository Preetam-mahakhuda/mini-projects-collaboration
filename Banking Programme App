#Banking Programme App

def show_balance(balance):
    print(f"Your balance is: ${balance}")

def deposite(balance):
amount = float(input("Enter an amount to be deposited: "))
    if amount < 0:
        print("That's not a valid amount")
        return 0
    else:
        print(f"Amount is credited. ${amount}")
        print(f"Your current balance is: ${amount + balance}")
        return amount

def withdraw(balance):
    if balance <= 0:
            print("Zero Balance")
            return 0
    else:
        amount = float(input("Enter amount to be withdrawn: "))
        if amount > balance:     
            print("Insufficient funds!!")      
            return 0
        elif amount < 0:    
            print("Amount must be greater than 0")
            return 0
        else:
            print(f"Amount is debited. ${amount}")
            print(f"Your current balance is: ${balance - amount}")
            return amount

def main(0):
    balance = 0
    is_running = True
    
    while is_running:
        print("Banking Programme")
        print("1.Show balance")
        print("2.Deposite")
        print("4.With draw")
        print("5.Exit")
        
    choice = input("Enter your choice(1-4): ")
    
    if choice == "1":
        show_balance(balance)
    elif choice == "2":
        balance +=deposite(balance)
    elif choice == "3":
        balance -= withdraw(balance)
    elif choice == "4":
        is_running = False
    else:
        print("This is not a valid function")
    print('Have a nice day!')
if __name__ == '__main__':
    
 main()
